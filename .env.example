# Vast.ai Configuration
# Copy this file to .env and fill in your values

# Your Vast.ai API key (required)
# Get it from: https://cloud.vast.ai/account/
VASTAI_API_KEY=your_api_key_here

# Default GPU preferences (optional)
DEFAULT_GPU_NAME=RTX_4090
DEFAULT_NUM_GPUS=1
DEFAULT_MAX_PRICE=0.50
DEFAULT_MIN_RELIABILITY=0.95

# Default Docker image (optional)
DEFAULT_DOCKER_IMAGE=vastai/pytorch

# SSH key path (optional)
SSH_KEY_PATH=~/.ssh/id_rsa.pub
